        <script>
            function doLogout() {
                if (confirm("Bạn chắc chắn đăng xuất?")) {
                    window.location = "logout";
                }
            }
        </script>
        <style>
            .image{
                flex-wrap: wrap;
                display: flex;
                margin-bottom: 150px;
            }

            .product{
                text-align: center;
                display: flex;
                flex-wrap: wrap;

            }

        </style>
